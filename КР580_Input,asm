ORG 0000H	; устанавливаем начальный адрес

	MVI B, d8	; 06
	MOV A, A	; 7F
	MVI C, d8	; 0E
	RST 7		; FF
	MOV A, B	; 78
	OUT N		; D3 00
	NOP		; 00
	MOV A, C	; 79
	OUT N		; D3 00
	NOP		; 00
	DCR B		; 05
	DCR C		; 0D
	MVI A, d8	; 3E
	NOP		; 00
	SUB C		; 91
	JNZ adr		; C2 0F 00
	INR B		; 04
	NOP		; 00
	HLT		; 76

adr:
	; здесь должен быть код обработки перехода
	; который будет выполняться при JNZ
  ; код обработки перехода необходимо дополнительно реализовать 
  ; так как команда JNZ переходит на адрес adr только в случае
  ; если результат предыдущей операции не был равен нулю
